{
  "manifest_version": 2,
  "name": "Mastodon Friend Checker",
  "description": "This extension shows a check mark if you've already friended a remote Mastadon user.",
  "version": "0.0.1",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ], 
  "permissions": [
    "activeTab",
    "https://*/",
    "storage"
  ]
}